	</ItemGroup>

	<ItemGroup Condition="$(MSBuildProjectFullPath.Contains('Modules')) and $(MSBuildProjectName.EndsWith('Tests'))">
		<ProjectReference Include="..\..\Infrastructure\*.csproj" />
		<ProjectReference Include="$(BBIntegrationTestsPath)" />
